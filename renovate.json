{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^internal/controller/gateway_controller\\.go$"
      ],
      "matchStrings": [
        "\\n\\t+// renovate: datasource=(?<datasource>[a-z-]+)\\n\\t+Image: \"(?<depName>[^$:\" ]+):(?<currentValue>[^$:\" ]+)\",\\n"
      ]
    }
  ]
}
